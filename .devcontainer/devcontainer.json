	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"danielpinto8zz6.c-cpp-compile-run",
